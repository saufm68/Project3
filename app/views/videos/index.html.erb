<div class="ui grid">
	<div class="two column row">
		<div class="column">
			<h1>Explore Videos</h1>
		</div>
		<div class="column">
			<div class="ui right aligned container">
				<%= link_to playlists_path do %>
					<button class="ui inverted orange button">Back to playlist</button>
				<% end %>
			</div>
		</div>
	</div>
</div>
<br>
<div class="ui special cards video-index-container">
	<% @videos.each do |video| %>
		<% string = video.video_url.dup %>
		<% string.gsub!('www','img')%>
		<% string = string.gsub!('embed','vi') %>
		<% if string %>
			<% string << '/0.jpg' %>
			<div class="card video-index-list">
		    <div class="blurring dimmable image">
		      <div class="ui dimmer">
		        <div class="content">
		          <div class="center">
		          	<%= link_to video_path(video.id)  do %>
		            <div class="ui inverted button">Watch</div>
		            <% end %>
		          </div>
		        </div>
		      </div>
		      <%= link_to image_tag(string, class: "preview-image"), video_path(video.id) %>
		    </div>
				<div class="content">
		      <a class="header"><%= video.name %></a>
		      <br>
		      <div class="meta">
		        <span class="date"><%= video.created_at%></span>
		      </div>
		    </div>
		  </div>
	  <% end %>
	<% end %>
</div>