<%= form_with model: @profile, class: 'ui form', local: true do |form| %>
	<div class='field'>
		<%= form.label :username %>
		<%= form.text_field :username, required: true %>
	</div>
	<div class='field'>
		<%= form.label :bio %>
		<%= form.text_area :bio, placeholder: 'Enter a short biography of yourself' %>
	</div>
	<%= form.hidden_field :exp, value: 0 %>
	<%= form.submit 'Create Profile', class: 'ui primary button' %>
<% end %>